{
  "name": "glasswall-file-drop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-loader-spinner": "^3.1.5",
    "react-promise-tracker": "^2.0.5",
    "react-scripts": "3.2.0",
    "react-transition-group": "^4.3.0",
    "react-xml-parser": "^1.1.3",
    "sass": "^1.23.7"
  },
  "scripts": {
    "build-css": "node-sass --include-path ./src/ --include-path ./node_modules src/sass -o src/",
    "watch-css": "npm run build-css && node-sass --include-path ./src --include-path ./node_modules src/sass -o src/ --watch --recursive",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "start-js": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5"
  }
}
